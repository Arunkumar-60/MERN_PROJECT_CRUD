<%- include('include/_login_header')%>

<div class="container w-25 my-4 ">
    <h1>Register </h1>
    <form action="/register" method="post">
        <div class="form-group my-1">
          <label for="name" class="my-1">name</label>
          <input type="text" class="form-control" name="name" id="name" required />
        </div>
        <div class="form-group my-1">
          <label for="email" class="my-1">Email</label>
          <input type="email" class="form-control" name="email" id="email" required />
        </div>
        <div class="form-group my-1">
          <label for="password" class="my-1">Password</label>
          <input type="password"  class="form-control" name="password" id="required" required />
        </div>
        <button type="submit" class="btn btn-primary my-2">register</button>
      </form>
      <a href="/login">login</a>
</div>


<%- include('include/_login_footer')%>